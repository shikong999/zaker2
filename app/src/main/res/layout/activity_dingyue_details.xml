<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRed"
    tools:context="com.example.lenovo.wdw.dingyue.DingyueDetailsActivity">


    <WebView
        android:id="@+id/dingyue_web"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </WebView>

    <ProgressBar
        android:layout_marginTop="50dp"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/dingyue_web_Bar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="gone" />

    <!-- 导航栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dingyue_details_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_toolbar_back_white" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/dingyue_details_pinglun"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_write_comment" />
        <ImageView
            android:id="@+id/dingyue_details_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_toolbar_share_white" />

        <ImageView
            android:id="@+id/dingyue_details_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_toolbar_setting_white" />
    </LinearLayout>
</FrameLayout>
