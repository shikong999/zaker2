<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".redian.RedianLikeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorRed"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/reDIan_biaoqian_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/redian_like_tiaojie"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/reian_like_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/reDian_like_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:background="@color/colorRed"
        android:id="@+id/reDian_like_sure"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/colorWhite"
        android:text="@string/app_sure"/>
</LinearLayout>
