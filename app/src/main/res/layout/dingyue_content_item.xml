<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c9c9c9"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dingyue_content_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite" />
    <!--大图片-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dingyue_content_item_one_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@mipmap/test_viewpager" />

        <TextView
            android:id="@+id/dingyue_content_item_one_title"
            style="@style/dingyue_content_title"
            android:layout_marginTop="160dp"
            android:background="#aaffffff"
            android:paddingLeft="10dp"
            android:text="标题" />
    </RelativeLayout>
    <!--第二行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- 2-->
            <!--android:background="#eff7ed"-->
        <LinearLayout
            android:id="@+id/dingyue_content_item_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/colorWhite"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/dingyue_content_item_two_title"
                style="@style/dingyue_content_title"
                android:text="暂无标题" />

            <TextView
                android:id="@+id/dingyue_content_item_two_auther"
                style="@style/dingyue_content_anther"
                android:text="无名" />
        </LinearLayout>
        <!-- 3-->
        <LinearLayout
            android:id="@+id/dingyue_content_item_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/colorWhite"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/dingyue_content_item_three_title"
                style="@style/dingyue_content_title"
                android:text="暂无标题" />

            <TextView
                android:id="@+id/dingyue_content_item_three_auther"
                style="@style/dingyue_content_anther"
                android:text="无名" />

        </LinearLayout>
    </LinearLayout>
    <!--第三行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <!-- 4-->

        <LinearLayout
            android:id="@+id/dingyue_content_item_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/dingyue_content_item_four_title"
                style="@style/dingyue_content_title"
                android:text="暂无标题" />

            <TextView
                android:id="@+id/dingyue_content_item_four_auther"
                style="@style/dingyue_content_anther"
                android:text="无名" />
        </LinearLayout>
        <!-- 5-->
        <LinearLayout
            android:id="@+id/dingyue_content_item_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/dingyue_content_item_five_title"
                style="@style/dingyue_content_title"
                android:text="暂无标题" />

            <TextView
                android:id="@+id/dingyue_content_item_five_auther"
                style="@style/dingyue_content_anther"
                android:text="无名" />

        </LinearLayout>
    </LinearLayout>

    <!--第四行-->
    <!-- 6-->
    <LinearLayout
        android:id="@+id/dingyue_content_item_six"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/dingyue_content_item_six_title"
            style="@style/dingyue_content_title"
            android:text="暂无标题" />

        <TextView
            android:id="@+id/dingyue_content_item_six_auther"
            style="@style/dingyue_content_anther"
            android:text="无名" />

    </LinearLayout>
</LinearLayout>