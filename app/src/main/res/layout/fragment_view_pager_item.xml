<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dingyue_viewpager_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGrey"
    tools:context="com.example.lenovo.wdw.dingyue.ViewPagerItemFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/viewpager_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/test_viewpager"/>
    <ImageView android:id="@+id/viewpager_item_type"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:src="@mipmap/test_viewpager_image"/>
    <TextView
        android:id="@+id/viewpager_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aaffffff"
        android:paddingLeft="10dp"
        android:text="暂无文本"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:textSize="15sp"/>

</RelativeLayout>
