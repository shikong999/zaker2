<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/reDian_listView_itemTwo_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/reDian_listView_itemTwo_tv"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/reDian_listView_itemtwo_tv_digest"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/reDian_listView_itemtwo_tv_source"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGrey" />

    <TextView
        android:id="@+id/reDian_listView_itemtwo_tv_lmodify"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:text="@string/app_name"
        android:textColor="@color/colorGrey" />
</LinearLayout>